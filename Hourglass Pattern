#include <stdio.h>

int main() {
    int n,i,j,s,a=1;
    printf("Enter the value:");
    scanf("%d",&n);
    for(i=0;i<n;i++)
    {
        for(s=0;s<i;s++)
        {
            printf(" ");
        }
        for(j=0;j<n*2-a;j++)
        {
            printf("*");
        }
        a=a+2;
        printf("\n");
    }
    for(i=0;i<n;i++)
    {
        for(s=0;s<n-i-2;s++)
        {
            printf(" ");
        }
        for(j=0;j<2*i+3;j++)
        {
            printf("*");
        }
        printf("\n");
    }
return 0;
}
